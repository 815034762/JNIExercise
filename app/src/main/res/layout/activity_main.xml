<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.administrator.jniresrevedemo.MainActivity">

        <TextView
            android:id="@+id/tvJavaToC"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="Java调用C" />

        <TextView
            android:id="@+id/tvCtoJava"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="C调用Java" />

        <TextView
            android:id="@+id/tvGetNetData"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="获取网络数据" />

        <TextView
            android:id="@+id/tvCallSort"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="调用排序算法" />

    </LinearLayout>
</ScrollView>
